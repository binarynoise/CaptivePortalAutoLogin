<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    >
    
    <TextView
        android:id="@+id/notUsingCaptivePortalWifiWarning"
        style="@style/CaptivePortalAutoLogin.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingHorizontal="@dimen/padding"
        android:paddingTop="@dimen/padding"
        android:text="@string/not_using_captive_portal_wifi_warning"
        tools:visibility="visible"
        />
    
    <TextView
        android:id="@+id/notUsingCaptivePortalWifiWarningService"
        style="@style/CaptivePortalAutoLogin.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingHorizontal="@dimen/padding"
        android:text="@string/not_using_captive_portal_wifi_warning_service"
        tools:visibility="visible"
        />
    
    <TextView
        android:id="@+id/notUsingCaptivePortalWifiWarningMobileData"
        style="@style/CaptivePortalAutoLogin.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingHorizontal="@dimen/padding"
        android:text="@string/not_using_captive_portal_wifi_warning_mobile_data"
        tools:visibility="visible"
        />
    
    <TextView
        android:id="@+id/notUsingCaptivePortalWifiWarningAlreadyLiberated"
        style="@style/CaptivePortalAutoLogin.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingHorizontal="@dimen/padding"
        android:text="@string/not_using_captive_portal_wifi_warning_already_liberated"
        tools:visibility="visible"
        />
    
    <TextView
        android:id="@+id/geckoError"
        style="@style/CaptivePortalAutoLogin.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingHorizontal="@dimen/padding"
        android:text="@string/gecko_error"
        tools:visibility="visible"
        />
    
    <org.mozilla.geckoview.GeckoView
        android:id="@+id/geckoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:alpha="0"
        tools:alpha="1"
        tools:visibility="visible"
        />
</LinearLayout>
